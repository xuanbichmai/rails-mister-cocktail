<div class="container">
  <h3><%= @cocktail.name %></h3>
    <% if @cocktail.photo.present? %>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= image_tag "http://placehold.it/400x300" %>
    <% end %>
    <% @cocktail.doses.each do |dose|%>
    <ul>
      <li><%= dose.ingredient.name %>: <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure' } do %>
          <i class=" fa fa-trash" aria-hidden="true"></i>
        <% end %>
      </li>
    </ul>
    <% end %>
</div>

<p><%= link_to 'Back', cocktails_path %> | <%= link_to 'Edit', edit_cocktail_path %> |
  <%= link_to 'Delete', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Add new dose', new_cocktail_dose_path(@cocktail) %>
</p>
