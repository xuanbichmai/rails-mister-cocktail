<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'background.jpg' %>);">
  <div class="banner-content">
    <h1>Welcome to Cocktails </h1>
    <p>Freely create your own favorite cocktails</p>
    <%= link_to "View Cocktail List", cocktails_path(anchor: 'cocktail-list') , class: "btn btn-primary btn-lg" %>
    <%= link_to "Create Your Cocktail", new_cocktail_path(@cocktail), class: "btn btn-success btn-lg" %>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="row", id="cocktail-list">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <div class="card text-center">
            <% if cocktail.photo.present? %>
              <div class="card-header" style="background-image: url('<%= image_path cocktail.photo %>')">
              </div>
            <% else %>
              <div class="card-header" style="background-image: url('http://placehold.it/400x300')">
              </div>
            <% end %>

            <div class="card-description">
              <h3><%= cocktail.name %></h3>
            </div>
            <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to 'Add new cocktail', new_cocktail_path(@cocktail), class: "btn btn-success" %>
</div>


