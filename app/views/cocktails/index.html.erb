<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
  <div class="banner-content">
    <h1>Welcome to Cocktails </h1>
    <p>Freely create your own favorite cocktails</p>
    <%= link_to "View Cocktail List", cocktails_path, class: "btn btn-primary btn-lg" %>
    <%= link_to "Create Your Cocktail", new_cocktail_path(@cocktail), class: "btn btn-success btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),">
         <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
            <div class="card-description  ">
              <h2><%= cocktail.name %></h2>
            </div>
        </div>
      </div>
      <% end %>
  </div>
</div>

<%= link_to 'Add new cocktail', new_cocktail_path %>
